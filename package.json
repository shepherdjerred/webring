  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/shepherdjerred/webring.git"
  },
  "bugs": {
    "url": "https://github.com/shepherdjerred/webring/issues"
  },
  "type": "module",
  "version": "1.1.4",
  "scripts": {
