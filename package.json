    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md",
    "LICENSE",
    "package-lock.json",
    "CHANGELOG.md"
  ]
}
